{
  "name": "infra",
  "version": "0.1.0",
  "bin": {
    "infra": "bin/infra.ts"
  },
  "scripts": {
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "build:product-service": "esbuild lib/product-service/handlers/* --bundle --platform=node --external:@aws-sdk --target=node20 --outdir=dist/lib/product-service/handlers",
    "build:import-csv-service": "esbuild lib/import-csv-service/handlers/* --bundle --platform=node --external:@aws-sdk --target=node20 --outdir=dist/lib/import-csv-service/handlers",
    "build": "npm run build:product-service & npm run build:import-csv-service & wait",
    "build:deploy": "npm run build && npm run deploy",
    "seed": "ts-node ./scripts/seed.ts",
    "synth": "cdk synth",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.155",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.25.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.902.0",
    "@aws-sdk/client-s3": "^3.908.0",
    "@aws-sdk/lib-dynamodb": "^3.906.0",
    "@aws-sdk/s3-request-presigner": "^3.908.0",
    "aws-cdk-lib": "^2.38.0",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.4.2",
    "csv-parser": "^3.2.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  }
}
